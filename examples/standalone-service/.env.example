# AI Monitor Configuration
AI_MONITOR_ENABLED=true

# AI Configuration
AI_API_KEY=your_openai_api_key_here
AI_API_URL=https://api.openai.com/v1
AI_MODEL=gpt-4o-mini

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
ENABLE_TELEGRAM=true

# Slack Configuration (Optional)
SLACK_WEBHOOK=
ENABLE_SLACK=false

# Email Configuration (Optional)
EMAIL_ALERTS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@fitcoach.com
EMAIL_TO=admin@fitcoach.com,devops@fitcoach.com
ENABLE_EMAIL=false

# Prometheus Configuration
PROMETHEUS_URL=http://prometheus:9090

# Monitoring Configuration
CHECK_INTERVAL=60

# Auto-Healing Configuration
AUTO_HEAL_ENABLED=true
AUTO_HEAL_MAX_ATTEMPTS=3
AUTO_HEAL_COOLDOWN=300

# Alert Thresholds
HIGH_ERROR_RATE_THRESHOLD=0.05
HIGH_RESPONSE_TIME_THRESHOLD=3.0
HIGH_MEMORY_USAGE_THRESHOLD=0.80
HIGH_CPU_USAGE_THRESHOLD=0.90
DISK_SPACE_LOW_THRESHOLD=0.85

# Security Thresholds
BRUTE_FORCE_THRESHOLD=10
UNUSUAL_TRAFFIC_THRESHOLD=5.0

# Business Thresholds
PAYMENT_FAILURE_THRESHOLD=0.03
USER_DROPOFF_THRESHOLD=0.20

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/ai-monitor.log

# Server
PORT=3333
HOST=0.0.0.0

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_password
